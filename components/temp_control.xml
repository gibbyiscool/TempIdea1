<component>
	<previews>
		<preview width="320" height="480" style_bg_color="#col_bg_dark"/>
	</previews>
	
	<styles>
		<!-- Text styles -->
		<style name="temp_big" text_font="font_m48" text_color="#col_text" />
		<style name="temp_small" text_font="font_m20" text_color="#col_text_sm" />
		
		<!-- Slider styles -->
		<style name="style_main" style_bg_color="#col_border" style_bg_opa="100%" style_radius="#radius_md" style_height="8" />
		<style name="style_indicator" style_bg_color="0x2F87FF" style_bg_opa="100%" style_radius="#radius_md" />
		<style name="style_knob" style_bg_color="0xFFFFFF" style_bg_opa="100%" style_pad_all="12" style_radius="12" style_border_width="2" style_border_color="0x2F87FF" />
		
		<!-- Bar styles -->
		<style name="style_bar_main" style_bg_color="#col_border" style_bg_opa="100%" style_radius="#radius_md" style_height="8" />
		<style name="style_bar_indicator" style_bg_color="0x2F87FF" style_bg_opa="100%" style_radius="#radius_md" />
		
		<!-- Card style -->
		<style name="style_card" style_bg_color="#col_card" style_bg_opa="100%" style_pad_all="20" style_radius="#radius_md" style_border_width="1" style_border_color="#col_border" />
		
		<!-- Container styles -->
		<style name="container" bg_opa="0" border_width="0" pad_all="0" />
		<style name="full_width" width="100%" />
		<style name="width_90" width="90%" />
	</styles>

	<view extends="lv_obj">
		<remove_style_all/>
		<width>100%</width>
		<height>100%</height>
		<bg_color>#col_bg_dark</bg_color>
		<bg_opa>100%</bg_opa>
		<pad_all>20</pad_all>
		<flex_dir>column</flex_dir>
		<flex_align>center start</flex_align>
		
		<!-- Current Temperature Section -->
		<lv_obj name="current_temp_container">
			<remove_style_all/>
			<style name="container" />
			<style name="full_width" />
			<flex_dir>column</flex_dir>
			<flex_align>center center</flex_align>
			<pad_bottom>30</pad_bottom>
			
			<lv_label name="current_label" text="Current Temperature">
				<style name="temp_small" />
			</lv_label>
			
			<lv_label name="current_value" bind_text="subject_temp_c" bind_text-fmt="%.1f째">
				<style name="temp_big" />
				<pad_top>8</pad_top>
			</lv_label>
		</lv_obj>

		<!-- Target Temperature Card -->
		<lv_obj name="target_card">
			<remove_style_all/>
			<style name="style_card" />
			<style name="width_90" />
			<flex_dir>column</flex_dir>
			<flex_align>center center</flex_align>
			
			<lv_label name="target_label" text="Target Temperature">
				<style name="temp_small" />
			</lv_label>
			
			<lv_label name="target_value" bind_text="subject_target_c" bind_text-fmt="%.1f째">
				<style name="temp_big" />
				<pad_top>12</pad_top>
				<pad_bottom>12</pad_bottom>
			</lv_label>
			
			<!-- Temperature Slider -->
			<lv_slider 
				name="temp_slider"
				bind_value="subject_target_c" 
				min_value="#target_min_c" 
				max_value="#target_max_c">
				<remove_style_all/>
				<style name="style_main" />
				<style name="style_indicator" selector="indicator" />
				<style name="style_knob" selector="knob" />
				<width>90%</width>
				<pad_top>8</pad_top>
				<pad_bottom>8</pad_bottom>
			</lv_slider>
			
			<!-- Min/Max Range Labels -->
			<lv_obj name="range_labels">
				<remove_style_all/>
				<style name="container" />
				<width>90%</width>
				<flex_dir>row</flex_dir>
				<flex_align>space_between center</flex_align>
				<pad_top>4</pad_top>
				
				<lv_label name="min_label" text="15.0째">
					<style name="temp_small" />
				</lv_label>
				
				<lv_label name="max_label" text="45.0째">
					<style name="temp_small" />
				</lv_label>
			</lv_obj>
		</lv_obj>

		<!-- Fan Speed Header -->
		<lv_obj name="fan_header">
			<remove_style_all/>
			<style name="container" />
			<style name="width_90" />
			<flex_dir>row</flex_dir>
			<flex_align>space_between center</flex_align>
			<pad_top>24</pad_top>
			
			<lv_label name="fan_label" text="Fan Speed">
				<style name="temp_small" />
			</lv_label>
			
			<lv_label name="fan_value" bind_text="subject_fan_duty" bind_text-fmt="%d%%">
				<style name="temp_small" />
			</lv_label>
		</lv_obj>

		<!-- Fan Duty Bar -->
		<lv_bar 
			name="fan_bar"
			bind_value="subject_fan_duty" 
			min_value="0" 
			max_value="100">
			<remove_style_all/>
			<style name="style_bar_main" />
			<style name="style_bar_indicator" selector="indicator" />
			<width>90%</width>
			<pad_top>8</pad_top>
		</lv_bar>

	</view>
</component>