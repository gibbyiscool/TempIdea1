<component>
    <previews>
        <preview style_pad_all="20" />
    </previews>
   <styles>
        <style name="style_main" style_bg_color="#surface_primary_light" style_bg_opa="#opa_muted" style_radius="20"
                                 style_height="#unit_sm" style_width="100%"/>
        <style name="style_indicator" style_bg_color="#surface_primary_light" style_bg_opa="100%"  style_radius="20"/>
        <style name="style_knob" style_bg_color="#surface_primary_light" style_bg_opa="100%" style_pad_all="#unit_sm" style_radius="20"/>
        <style name="style_dark" style_bg_color="#surface_primary_dark" />
   </styles>
   <view extends="lv_slider">
        <remove_style_all/>
        <style name="style_main" />
        <style name="style_knob" selector="knob" />
        <style name="style_indicator" selector="indicator" />
        <bind_style subject="dark_theme" ref_value="1" name="style_dark" />
        <bind_style subject="dark_theme" ref_value="1" name="style_dark" selector="indicator" />
   </view>
</component>