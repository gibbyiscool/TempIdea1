<globals>
	<api>
		<!-- Enumerations used in code/UI bindings -->
	</api>

	<consts>
		<!-- Colors -->
		<color name="col_bg_dark" value="0x111111" />
		<color name="col_card" value="0x1C1C1C" />
		<color name="col_border" value="0x2A2A2A" />
		<color name="col_text" value="0xFFFFFF" />
		<color name="col_text_sm" value="0xE0E0E0" />

		<!-- Spacing / radius -->
		<int name="pad_md" value="8" />
		<int name="pad_lg" value="10" />
		<int name="radius_md" value="8" />

		<!-- Timings / limits -->
		<int name="long_press_ms" value="700" />
		<int name="idle_dim_s" value="30" />
		<!-- Temperature slider in 0.1°C steps -->
		<int name="target_min_tenthsC" value="150" />
		<!-- 15.0°C -->
		<int name="target_max_tenthsC" value="450" />
		<!-- 45.0°C -->
	</consts>

	<styles>
		<!-- Fullscreen dark background -->
		<style name="st_bg_dark" bg_color="#col_bg_dark" bg_opa="100%" />

		<!-- Big label (main temperature) -->
		<style name="st_lbl_big" text_color="#col_text" text_font="font_m48" />

		<!-- Small label (fan %, target, captions) -->
		<style name="st_lbl_sm" text_color="#col_text_sm" text_font="font_m20" />

		<!-- Card panel used on Set/Options screens -->
		<style
			name="st_card"
			bg_color="#col_card"
			bg_opa="100%"
			pad_all="#pad_md"
			radius="#radius_md"
			border_color="#col_border"
			border_width="1"
		/>

		<!-- Primary button (optional) -->
		<style
			name="st_btn_primary"
			pad_all="#pad_md"
			radius="#radius_md"
			bg_color="0x2F87FF"
			bg_opa="100%"
			text_color="0xFFFFFF"
			text_font="font_m20"
		/>
	</styles>

	<subjects>
		<!-- Bindable state the UI and code can share -->
		<int name="subject_temp_c" value="275" help="current interior temperature (°C * 10)" />
		<int name="subject_target_c" value="300" help="target setpoint (°C * 10)" />
		<int name="subject_fan_duty" value="20" help="0..100 (%)" />
		<int name="subject_units" value="0" help="0=C, 1=F" />
		<int name="subject_manual_override" value="0" help="0=false, 1=true" />
		<int name="subject_manual_duty" value="60" help="0..100 (%)" />
		<int name="subject_alarm_enabled" value="1" help="0=false, 1=true" />
		<int name="subject_alarm_high_c" value="450" help="alarm threshold (°C * 10)" />
		<int name="subject_cal_offset_c" value="0" help="calibration offset (°C * 10)" />
		<int name="subject_brightness_pct" value="100" help="screen dimming 0..100" />
	</subjects>

	<images>
		<!-- Placeholders: reference files in your assets folder if you add icons -->
		<!-- <file name="ico_fan" src_path="images/fan.png"/> -->
		<!-- <file name="ico_gear" src_path="images/gear.png"/> -->
	</images>

	<fonts>
		<!-- Compact baked fonts (Tiny TTF) -->
		<tiny_ttf name="font_m20" src_path="fonts/Montserrat-Regular.ttf" size="20" />
		<tiny_ttf name="font_m36" src_path="fonts/Montserrat-Regular.ttf" size="36" />
		<tiny_ttf name="font_m48" src_path="fonts/Montserrat-Regular.ttf" size="48" />
	</fonts>
</globals>
